<div class="modal-header">
  <h5 class="modal-title">Add a new article</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
<%= form_for @article do |f| %>

  <%= f.label :title, "Enter the title of the article" %>
  <%= f.text_field :title %>

  <%= f.label :content, "Enter the content of the article" %>
  <%= f.text_field :content %>

  <%= f.submit %>
<% end %>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Post</button>
  <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
</div>




