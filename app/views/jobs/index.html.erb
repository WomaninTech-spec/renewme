<div class="container mt-3">
  <div class="card">
    <div class="card-header">
      <h1>All of our jobs</h1>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-12 col-md-9">
          <%= form_tag jobs_path, method: :get, class: "form-inline mb-3" do %>
          <table>
            <tr>
              <td>
                <%= text_field_tag :query,
                  params[:query],
                  class: "form-control rounded-pill",
                  type: "search",
                  placeholder: "Find a job"
                %>

              </td>
              <td>

            <%= submit_tag "Search", class: "btn btn-outline-primary rounded-pill mt-auto" %>
              </td>
            </tr>
          </table>
          <% end %>

        </div>
        <div class="col-12 col-md-2 m-auto">
          <%== pagy_bootstrap_nav(@pagy) %>

        </div>
      </div>
      <hr>
      <br>
      <% if @jobs.empty? %>
        <p>No results found.</p>
      <% end -%>
      <div class="cards">
        <% @jobs.each do |job| %>
          <div class="card-user rounded-pill">
            <div class="card-user-infos">
              <h2><%= link_to job.title, job_path(job) %></h2>
              <p><%= job.description.truncate(150, separator: ' ') %></p>
              <p><%= job.user.username %></p>
            </div>
          </div>
        <% end -%>
      </div>

    </div>
  </div>
</div>
