<div class="modal-header">
  <h5 class="modal-title">Edit an experience</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <%= simple_form_for([current_user, @experience], url: my_user_experience_path(current_user,@experience), remote: true) do |f| %>
    <%= f.input :start_date, html5: true %>
    <%= f.input :end_date, label:"End Date (leave blank if you currently work here)",html5: true %>
    <%= f.input :content %>
    <%= f.button :submit, class: 'btn btn-outline-primary' %>
    <button type="button" class="btn btn-outline-secondary ml-3" data-dismiss="modal">Close</button>
  <% end -%>
</div>

