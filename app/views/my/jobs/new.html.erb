<div class="modal-header">
  <h5 class="modal-title">Add a new job</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
<%= form_for @job do |format| %>

  <%= f.label :name, "Enter the name of the job" %>
  <%= f.text_field :name %>

  <%= f.label :title, "Enter the title of the job" %>
  <%= f.text_field :title %>

  <%= f.label :content, "Enter the content of the job" %>
  <%= f.text_field :content %>

  <%= f.submit %>
<% end %>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Post</button>
  <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
</div>





