<div class="modal-header">
  <h5 class="modal-title">Edit a skill</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <%= simple_form_for([current_user, @users_skill], url: my_user_users_skill_path(current_user,@users_skill), remote: true) do |f| %>
    <%= f.input :skill_id, as: :hidden %>
    <p>Skill: <%= @users_skill.skill.name %></p>
    <%= f.input :level, collection: UsersSkill.levels, selected: UsersSkill.levels[@users_skill.level]%>
    <%= f.input :previous_skills %>
    <%= f.button :submit, class: 'btn btn-outline-primary' %>
  <% end -%>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
</div>
